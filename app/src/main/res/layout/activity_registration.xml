<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/googlebtn"
                android:text="Google"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/google_btn"/>

            <Button
                android:id="@+id/facebook_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/facebook_btn"
                android:text="facebook"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/LoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Sign up"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:layout_marginStart="40dp"
            android:textColorHighlight="@color/purple_200"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="40dp"
            android:textColor="#F3EDEDED"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:layout_marginStart="44dp"/>
        <EditText
            android:id="@+id/usern_Registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:height="35dp"
            android:background="@drawable/shape"
            android:layout_marginTop="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="16dp"
            android:paddingStart="15dp"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:hint="Enter your name"
            android:textColorHint="#8F8F8F"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="16dp"
            android:textColor="#F3EDEDED"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:layout_marginStart="44dp"/>
        <EditText
            android:id="@+id/usern_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textAlignment="textStart"
            android:height="35dp"
            android:background="@drawable/shape"
            android:layout_marginTop="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:paddingStart="15dp"
            android:focusableInTouchMode="true"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            android:hint="example@gmail.com"
            android:textColorHint="#8F8F8F"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="16dp"
            android:textColor="#F3EDEDED"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="44dp"/>
        <EditText
            android:id="@+id/password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:paddingStart="15dp"
            android:focusableInTouchMode="true"
            android:textColorHint="#8F8F8F"
            android:hint="Pick a strong password"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:text="Male"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/male"
                android:id="@+id/male_btn"/>

            <Button
                android:id="@+id/female_btn"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:text="Female"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/female" />

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Agreed Terms and Condition"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:textColor="#838383"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btnshape"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/signup_btn"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have account? "
            android:textColor="#F0C1C1C1"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/login_Reg"
            android:textAlignment="center"
            android:textStyle="bold"
            android:backgroundTint="#00613232"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:text="Login"/>


    </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>